<!DOCTYPE html>
<html>
  <head>
    <title>SeePeeps</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <style> 
    .debug, .link_accounts {
      border: 1px solid black;
      width: 800px;
      padding: 10px;
      margin: auto;
    }
    </style>
    
  </head>
  <body>
    <h1> <%= link_to (image_tag "PeepsYellow.png"), root_path %>PEEPS</h1>
      <% if current_user %>
        <div class='navbar'>
          <%= link_to "Sign Out", sign_out_path, class: 'btn btn-default' %>
          <%= link_to "My Feed", user_path(current_user), class: 'btn btn-default' %>
        </div>

        <div class="search_bars">

          <%= form_tag twitter_search_path, :class =>"navbar-form navbar-right", method: 'post' do %>
            <div class="form-group">
              <%= text_field_tag "twitter_search", nil, placeholder: "Search Twitter", class: "form-control" %>
            </div>
            <button type="submit" class="btn btn-info">Go!</button>
          <% end %>

          <%= form_tag search_tum_path, :class =>"navbar-form navbar-right", method: 'post' do %>
            <div class="form-group">
              <%= text_field_tag "search_tum", nil, placeholder: "Search Tumblr", class: "form-control" %>
            </div>
            <button type="submit" class="btn btn-info">Go!</button>
          <% end %>

          <%= form_tag rss_path, :class =>"navbar-form navbar-right", method: 'post' do %>
            <div class="form-group">
              <%= text_field_tag "get_rss", nil, placeholder: "Add a feed", class: "form-control" %>
              <!-- <input type="text" name="get_rss" class="form-control" placeholder="Add a Feed"> -->
              </div>
            <button type="submit" class="btn btn-info">Go!</button>
          <% end %>
        
          <% if has_twitter_provider %>
            <%= form_tag(tweet_path, :class =>"navbar-form navbar-right", method: 'post') do %>
            <div class="form-group">
              <%= text_field_tag :tweet, "", class: "form-control", placeholder: "Post to Twitter", size: "20", maxlength: "140", onkeyup: "CheckMaxlength(this);"%>
            </div>
              <%= submit_tag("Post", class: "btn btn-info") %>
            <% end %>
          <% end %>
          
        </div>
      <% end %>

    <% if flash[:notice] %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

<!-- To be deleted when done -->

    <div class='debug'><h3>Debug</h3>
      <h4>Current User ID: <%=session[:user_id] %><br></h4>
        <%=current_user.username if current_user%><br>
      <hr>
      <h4>Users</h4>
      <ul>
        <%User.all.each do |user| %>
          <li><%=user.username %></li>
        <% end %>
      </ul>
      <hr>
      <h4>Providers</h4>
      <ul>
        <%Provider.all.each do |provider| %>
          <li><%=provider.name %></li>
        <% end %>
      </ul>
      <hr>
      <!-- <h4>Posts</h4>
      <ul>
        <% Post.all.each do |post| %>
          <li><%#=post.inspect %></li>
        <% end %>
      </ul> -->
    </div>
<!-- end debug -->
  </body>
</html>
